  <%= render '/schools/nav' %>

  <div style="width: 100%; height: 50vw;"
  data-vide-bg="mp4: <%= video_url('Typing3_edit.mp4') %>, poster: <%= image_url('Typing3_edit.png') %>" data-vide-options="loop: true, muted: false, position: 0% 0%, posterType: png"></div>


  <div class="container-launch" id="accelerate">
    <div class="col-lg-6">
      <h1 style="float: left; color: #fff;">Launch your career.</h1>
      </div>
      <div class="col-lg-6">
      </div>
      <div class="col-md-3" style="margin-top: 400px; margin-left: 150px;">
        <p style="text-align: center; color: #fff; font-size: 20px;">
          Get the skills you need to land an exciting role as a web developer in the fraction of the time of getting a degree.
        </p>
      </div>
  </div>





  <div class="jumbotron-red" id="find-bootcamp">
      <h1 style="padding-top: 1em;">FIND A BOOTCAMP</h1>
       <div class="col-md-6 search">
        <h3>Find a Local School</h3>
        <p>Where do you want to study?</p>
          <!-- I added method 'get' to the form tag because it was trying to create a school (and throw an error) when using post. -->
        <%= form_tag(search_index_path, :method => "get", class: "chosen-container-multi chosen-choices") do %>
        <div class="search-form">
          <%= text_field_tag :city_search, params[:city_search], placeholder: "eg. San Francisco", class: "chosen-container-multi chosen-choices" %>
        </div>
        <div>
          <!-- Added name nil to the submit because the search query was being tacked on to the slug, still doesnt work -->
          <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
        </div>
        <% end %>
      </div>

      <div class="col-md-6 search">
        <h3>Search by Subject</h3>
        <p>What do you want to learn?</p>
        <!-- I added method 'get' to the form tag because it was trying to create a school (and throw an error) when using post. -->
        <%= form_tag(search_index_path, :method => "get", id: "search-form") do %>
        <div class="search-form">
          <%= text_field_tag :tags_search, params[:tags_search], placeholder: "eg. Rails", class: "chosen-container-multi chosen-choices" %>
        </div>
        <div>
          <!-- Added name nil to the submit because the search query was being tacked on to the slug, still doesnt work -->
          <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
        </div>
        <% end %>

      </div>
  </div>

  <div class="jumbotron-blue" id="featured-schools">
    <h2>Featured Schools</h2>
      <div class="well feature-school col-md-4">
        <%= image_tag('codecore_bootcamp_logo.jpg',
            :class => 'bootcamp-logo') %>
          <h4><%= School.find(1).name %></h4>
          <h5><%= School.find(1).city %>,&nbsp;<%= School.find(1).country %></h5>
          <p><%= School.find(1).description %></p>
      </div>

      <div class="well feature-school col-md-4">
        <%= image_tag('codefellows.png',
            :class => 'bootcamp-logo') %>
            <h4><%= School.find(4).name %></h4>
            <h5><%= School.find(4).city %>,&nbsp;<%= School.find(1).country %></h5>
            <p><%= School.find(4).description %></p>
      </div>

      <div class="well feature-school col-md-4">
        <%= image_tag('bloc-io-logo.png',
            :class => 'bootcamp-logo') %>
            <h4><%= School.find(3).name %></h4>
            <h5><%= School.find(3).city %>,&nbsp;<%= School.find(1).country %></h5>
            <p><%= School.find(3).description %></p>
      </div>
    </div>
  </div>

<div class="footer-footer" id="footer">
