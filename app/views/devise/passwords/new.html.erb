<%= render '/layouts/nav' %>

<div>
  <div class="jumbotron-blue" style="margin-top: 50px;">

  <div class="title">
    <h2 style="margin-top: 10px; color: #fff;">Forgot your password?</h2>
  </div>

      <div class="form col-sm-2 col-md-push-4">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <p><%= f.label :email %></p>
              <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="actions">
            <%= f.submit "Send me reset password instructions", class: 'btn btn-default' %>
          </div>
        <% end %>

    </div>
  </div>
</div>

<%= render partial: 'layouts/footer' %>
